<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Collapsed View (Pill/Bubble) -->
    <LinearLayout
        android:id="@+id/collapsedView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/overlay_collapsed_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="8dp">

        <!-- Drag Handle -->
        <View
            android:id="@+id/dragHandle"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <!-- Status Dot -->
        <View
            android:id="@+id/statusDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/status_active" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Alerts ON"
            android:textColor="#22C55E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Mini Speed -->
        <TextView
            android:id="@+id/miniSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="0 mph"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Quick Report Button -->
        <Button
            android:id="@+id/quickReportBtn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/report_button_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Report"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Expanded View -->
    <LinearLayout
        android:id="@+id/expandedView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/overlay_expanded_bg"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Header with collapse button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Drag Handle -->
            <View
                android:id="@+id/dragHandleExpanded"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent" />

            <!-- Status Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/status_active" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="DriveSafe UK"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/collapseBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:contentDescription="Collapse"
                android:src="@android:drawable/arrow_up_float"
                android:tint="#94A3B8" />
        </LinearLayout>

        <!-- Speed Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/speedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#22C55E"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/speedUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="MPH"
                android:textColor="#64748B"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Camera Info -->
        <TextView
            android:id="@+id/cameraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/camera_info_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Road clear ahead"
            android:textColor="#FBBF24"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Report Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reportMobileBtn"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/mobile_camera_btn_bg"
                android:text="Mobile Cam"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reportPoliceBtn"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:background="@drawable/police_check_btn_bg"
                android:text="Police Check"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Open App Button -->
        <Button
            android:id="@+id/openAppBtn"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/open_app_btn_bg"
            android:text="Open Full App"
            android:textAllCaps="false"
            android:textColor="#3B82F6"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>
